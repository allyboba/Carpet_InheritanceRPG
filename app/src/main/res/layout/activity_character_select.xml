<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".character_select">

    <TextView
        android:id="@+id/txtCharSelect"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:fontFamily="@font/undertale"
        android:text="CHARACTER SELECT"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/btnHero"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/undertale"
        android:text="Hero"
        android:textColor="#006104"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStory" />

    <Button
        android:id="@+id/btnMonster"
        android:layout_width="125dp"
        android:layout_height="67dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/undertale"
        android:text="Monster"
        android:textColor="#FF1100"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHero"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtStory"
        android:layout_width="291dp"
        android:layout_height="72dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/undertale"
        android:text="In this world resides heroes and monsters.\n Will you choose to learn about the four types \n of heroes? Or will you choose to learn about \n the class of monsters that infest this world?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCharSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>